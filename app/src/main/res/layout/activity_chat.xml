<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harshith.chatsockets.ChatActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="375dp"
        android:layout_height="426dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.857"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/multiAutoCompleteTextView2"
        android:id="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.421" />

    <Button
        android:id="@+id/button"
        android:layout_width="88dp"
        android:layout_height="41dp"
        android:text="Send"
        android:textColor="@color/primaryText"
        android:background="@drawable/rounded_button"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/multiAutoCompleteTextView2"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@+id/multiAutoCompleteTextView2"
        android:layout_marginTop="0dp" />

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="16dp"
        android:minWidth="250dp"
        android:maxWidth="250dp"
        android:hint="Message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
